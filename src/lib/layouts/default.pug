include ../mixins/helpers

doctype html
html.no-js(lang='en')
  head
    meta(name='package' content=`${pkg.name} v${pkg.version}`)
    meta(name='revision' content=GIT_REVISION)
    base(href=(ROOT || '') + '/')

    block head
    include ../partials/head

    includeTag(src='styles.css sprites.css')
  body(class=classes || '')
    block top
    block body
    block scripts

    #social.fixed.segment
      div: include ../partials/social

    if env.NODE_ENV === 'production'
      script(async src=`https://www.googletagmanager.com/gtag/js?id=${UA_TOKEN}`)
      script.
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', '#{UA_TOKEN}');
