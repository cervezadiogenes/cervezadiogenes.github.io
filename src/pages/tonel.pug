//-
  ---
  title: Tonel de Diógenes
  menu: !include _menu.yml
  classes: tonel
  ---

extends ../lib/layouts/default

block head
  includeTag(src='menu.css')

block top
  nav.fixed.segment.nosl
    p.caps Argentina #17, Col. Americana
    div.caps
      ul.reset
        li: +linkFor('/')
          +iconImage('fauno')
        li: +linkFor('/tonel/#drinks', 'Bebidas').shadow
        li: +linkFor('/tonel/#food', 'Pequeña cocina').shadow

block body
  .body.segment.center
    div.nosl
      .push
        +getVideo('Tonel_de_Diogenes_Moral-Chico', 960, 420).fit

      .push.clear
        +linkFor('/tonel')
          image.fit.max(src='tonel')
        p: span Cerveza Artesanal

    each section in menu.sections
      .push
        a(name=section.name)
        .md-flex
          .md-half
            .flex
              .half
                for item in section.items.left
                  +prodList(item)
              .auto.icons
                for icon in section.icons.left
                  icon(src=`menu/${icon}`)
          .md-half
            .flex
              .half
                for item in section.items.right
                  +prodList(item)
              .auto.icons
                for icon in section.icons.right
                  icon(src=`menu/${icon}`)
